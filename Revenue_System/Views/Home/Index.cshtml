@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container">
        <div>
            <h2>Customer Form</h2>
            <div id="grid"></div>

            <button class="k-button" onclick="showCustomerForm()">New Customer</button>
        </div>

        <div class="overlay" id="overlay"></div>

        <!-- Form Đăng Nhập thêm khách hàng -->
        <div class="customer-form" id="customerForm">
            <h2>Thêm Khách Hàng Mới</h2>
            <form id="createCustomerForm">
                <div class="form-group">
                    <label for="customerID">Customer ID:</label>
                    <input type="text" id="customerID" name="CustomerID" required>
                </div>
                <div class="form-group">
                    <label for="customerName">Customer Name:</label>
                    <input type="text" id="customerName" name="CustomerName" required>
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number:</label>
                    <input type="text" id="phone" name="Phone" required>
                </div>
                <button type="button" onclick="createCustomer()">Thêm Khách Hàng</button>
                <button type="button" onclick="hideCustomerForm()">Hủy</button>
            </form>
        </div>

        <!-- Form Cập Nhật Khách Hàng -->
        <div class="customer-form" id="updateCustomerForm" style="display:none;">
            <h2>Cập Nhật Khách Hàng</h2>
            <form id="updateCustomerFormContent">
                <div class="form-group">
                    <label>Customer ID:</label>
                    <span id="displayCustomerID"></span>
                    <input type="hidden" id="updateCustomerID" name="CustomerID" required>
                </div>
                <div class="form-group">
                    <label for="updateCustomerName">Customer Name:</label>
                    <input type="text" id="updateCustomerName" name="CustomerName" required>
                </div>
                <div class="form-group">
                    <label for="updatePhone">Phone Number:</label>
                    <input type="text" id="updatePhone" name="Phone" required>
                </div>
                <button type="button" onclick="updateCustomer()">Cập Nhật Khách Hàng</button>
                <button type="button" onclick="hideUpdateCustomerForm()">Hủy</button>
            </form>
        </div>

    </div>
</main>

@section Scripts {
    <script src="~/js/main.js"></script>
}
