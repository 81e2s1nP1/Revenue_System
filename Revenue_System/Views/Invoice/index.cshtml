@{
    ViewData["Title"] = "Invoices Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container">
        <h2>Invoices Form</h2>
        <div id="grid"></div>

        <button class="k-button" onclick="showinvoiceForm()">New Invoices</button>
    </div>

    <div class="overlay" id="overlay"></div>

    <!-- Form Tạo Hóa Đơn mới -->
    <div class="customer-form" id="invoiceForm" style="display:none;">
        <h2>Tạo Hóa Đơn Mới</h2>
        <form id="createInvoiceForm">
            <div class="form-group">
                <label for="InvoiceID">Invoice ID</label>
                <input type="text" class="form-control" id="InvoiceID" name="InvoiceID" required />
            </div>

            <div class="form-group">
                <label for="CustomerID">Customer ID</label>
                <select class="form-control" id="CustomerID" name="CustomerID" required>
                    <option value="">Chọn Customer ID</option>
                    <!-- Các option sẽ được thêm vào đây bằng JavaScript -->
                </select>
            </div>

            <div class="form-group">
                <label for="InvoiceDate">Invoice Date</label>
                <input type="date" class="form-control" id="InvoiceDate" name="InvoiceDate" required />
            </div>

            <div class="form-group">
                <label for="InvoiceDetailID">Invoice Detail ID</label>
                <input type="text" class="form-control" id="InvoiceDetailID" name="InvoiceDetailID" required />
            </div>

            <div class="form-group">
                <label for="ProductID">Product ID</label>
                <select class="form-control" id="ProductID" name="ProductID" required>
                    <option value="">Chọn Product ID</option>
                    <!-- Các option sẽ được thêm vào đây bằng JavaScript -->
                </select>
            </div>

            <div class="form-group">
                <label for="Quantity">Quantity</label>
                <input type="number" class="form-control" id="Quantity" name="Quantity" required />
            </div>

            <button type="button" class="btn btn-primary" onclick="createInvoice()">Create Invoice</button>
            <button type="button" onclick="hideinvoiceForm()">Hủy</button>
        </form>
    </div>

    <!-- Form Cập Nhật Đơn Hàng -->
    <div class="customer-form" id="updateInvoiceForm" style="display:none;">
        <h2>Cập Nhật Sản Phẩm</h2>
        <form id="updateProductFormContent">
            <div class="form-group">
                <label>Invoice ID:</label>
                <span id="displayInvoiceID"></span>
                <input type="hidden" id="updateInvoiceID" name="InvoiceID" required>
            </div>
            <div class="form-group">
                <label>Invoice Details ID:</label>
                <span id="displayInvoiceDetailsID"></span>
                <input type="hidden" id="updateInvoiceDetailsID" name="InvoiceDetailsID" required>
            </div>
            <div class="form-group">
                <label for="updateQuantity">Quantity:</label>
                <input type="number" id="updateQuantity" name="Quantity" required>
            </div>
            <div class="form-group">
                <label for="UpdateDate">Price:</label>
                <input type="date" id="UpdateDate" name="Date" required>
            </div>
            <button type="button" onclick="updateInvoiceAndInvoiceDetail()">Cập Nhật Sản Phẩm</button>
            <button type="button" onclick="hideUpdateInvoiceForm()">Hủy</button>
        </form>
    </div>
</main>

@section Scripts {
    <script src="~/js/invoice.js"></script>
}

